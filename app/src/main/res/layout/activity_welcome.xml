<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.onmyway.WelcomeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/giphy"
        />

    <Button
        android:id="@+id/btnCustomer"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@color/colorNice"
        android:onClick="goToCustomerEntry"
        android:text="I'm a Customer"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDriver"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:background="@color/colorSecondary"
        android:onClick="goToDriverEntry"
        android:text="I'm a Driver"
        android:textColor="@color/colorNice"
        android:textStyle="bold" />

</RelativeLayout>
